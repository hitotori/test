package com.internousdev.template.action;

import java.sql.SQLException;
import java.util.ArrayList;
import java.util.Map;

import org.apache.struts2.interceptor.SessionAware;

import com.internousdev.template.dao.ItemListDAO;
import com.internousdev.template.dto.ProductEntryDTO;
import com.opensymphony.xwork2.ActionSupport;

public class ItemListAction extends ActionSupport implements SessionAware{
	private ArrayList<ProductEntryDTO> pList=new ArrayList<ProductEntryDTO>();
	public Map<String,Object>session;
	private ItemListDAO dao=new ItemListDAO();
	public String deleteFlg;
	private String message;
	public String execute() throws SQLException{
		if(!session.containsKey("id")){
			return ERROR;
		}

		if(deleteFlg==null){
			String item_transaction_id=session.get("id").toString();
			delete();
		}
		String ret=SUCCESS;
		return ret;
	}






	public String getDeleteFlg(){
		return deleteFlg;
	}
	public void setDeleteFlg(String deleteFlg){
		this.deleteFlg=deleteFlg;
	}
	public Map<String,Object>getSession(){
		return session;
	}
	public void setSession(Map<String,Object>session){
		this.session=session;
	}
	public ArrayList<ProductEntryDTO>getPList(){
		return pList;
	}
	public void setPList(ArrayList<ProductEntryDTO>pList){
		this.pList=pList;

	}
}
